{% block body %}
    <div class="container ">
        <h3 class="text-center">Acomptes versés</h3>
        <h4 class="text-center">{{ facture.client.nom }}  {{ facture.client.prenom }}</h4>
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col" class="text-center">Facture n°</th>
                <th scope="col" class="text-center">Montant</th>
            </tr>
            </thead>
            <tbody>
            {% for acompte in acomptes %}
                <tr>
                    <th scope="row" class="text-center">2020{{ facture.id }}</th>
                    <td class="text-center">{{ acompte.montant }} €</td>
                    <td class="text-center">
                        <a href="{{ path('acompte_delete', {'id': acompte.id}) }}" class=" btn btn-sm btn-danger">
                            <i class="fas fa-trash text-center"></i>
                        </a>
                    </td>

                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}