{% extends 'base.html.twig' %}

{% block title %}Liste des factures{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-2">Factures</h1>
        <table class="table table-dark mt-5">
            <thead>
            <tr>
                <th scope="col" class="text-center" >Facture n°</th>
                <th scope="col" class="text-center">Date Facture/Devis</th>
                <th scope="col" class="text-center">Total Facture/Devis</th>
                <th scope="col" class="text-center">Total acomptes</th>
                <th scope="col" class="text-center">Capital restant dû</th>
                <th scope="col" class="text-center">Voir</th>
                <th scope="col" class="text-center">Acompte</th>


            </tr>
            </thead>
            <tbody>
            {% for facture in lesFactures %}
            <tr>
                <th scope="row" class="text-center">2020{{ facture.id }}</th>
                <td class="text-center">{{ facture.dateFacture | date("d/m/Y") }}</td>
                <td class="text-center">{{ facture.montantTtc | number_format(2, ',', ' ') }} €</td>
                <td class="text-center">{{ facture.totalAcompte }}</td>
                <td class="text-center">{{ facture.crd | number_format(2, ',', ' ') }} €</td>
                <td class="text-center">
                    <a href="" class="btn btn-sm btn-success">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a href="" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                </td>

            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
