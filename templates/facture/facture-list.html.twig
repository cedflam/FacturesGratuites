{% extends 'base.html.twig' %}

{% block title %}Liste des factures{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-2">Factures</h1>
        <div class="form-group mt-5">
            <label for="" class="">Rechercher</label>
            <input name="search" type="text" class="form-control" id="search">
        </div>
        <table class="table table-dark mt-5">
            <thead>
            <tr>
                <th scope="col" class="text-center">Facture n°</th>
                <th scope="col" class="text-center">Client</th>
                <th scope="col" class="text-center">Date Facture</th>
                <th scope="col" class="text-center">Total Facture</th>
                <th scope="col" class="text-center">Total acomptes</th>
                <th scope="col" class="text-center">Capital restant dû</th>
                <th scope="col" class="text-center">Voir</th>
                <th scope="col" class="text-center">Ajout Acompte</th>
                <th scope="col" class="text-center">Liste Acomptes</th>


            </tr>
            </thead>
            <tbody>
            {% for facture in lesFactures %}
                <tr>
                    <th scope="row" class="text-center">2020{{ facture.id }}</th>
                    <th scope="row" class="text-center">{{ facture.client.nom }}</th>
                    <td class="text-center">{{ facture.dateFacture | date("d/m/Y") }}</td>
                    <td class="text-center">{{ facture.montantTtc | number_format(2, ',', ' ') }} €</td>
                    <td class="text-center">{{ facture.totalAcompte | number_format(2, ',', ' ') }} €</td>
                    <td class="text-center">{{ facture.crd | number_format(2, ',', ' ') }} €</td>
                    <td class="text-center">
                        <a href="" class="btn btn-sm btn-success">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('acompte_add', {'id': facture.id}) }}"
                           class="btn btn-sm btn-primary addAcompte"
                           data-toggle="modal"
                           data-target="#add-acompte">
                            <i class="fas fa-plus-circle"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('acompte_show', {'id': facture.id}) }}"
                           class="btn btn-sm btn-danger show-acompte"
                           data-toggle="modal"
                           data-target="#show-acompte">
                            <i class="fas fa-minus-circle"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {# modal add-acompte #}
    {% include 'facture/modal-add-acompte.html.twig' %}
    {# modal delete-acompte #}
    {% include 'facture/modal-delete-acompte.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/addAcompte.js') }}"></script>
    <script src="{{ asset('js/showAcompte.js') }}"></script>
    <script src="{{ asset('js/searchClient.js') }}"></script>
{% endblock %}
