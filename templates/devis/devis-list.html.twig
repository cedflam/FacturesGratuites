{% extends 'base.html.twig' %}

{% block title %}Liste des devis  {% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center mt-3">Devis de {{ client.nom }} {{ client.prenom }}</h1>
        <table class="table table-dark mt-5">
            <thead>
            <tr>
                <th scope="col" class="text-center">Devis n°</th>
                <th scope="col">Date Devis</th>
                <th scope="col" class="text-center" >Montant TTC</th>
                <th scope="col" class="text-center">Restant dû</th>
                <th scope="col" class="text-center">Voir</th>
                <th scope="col" class="text-center">Modifier</th>
                <th scope="col" class="text-center">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for facture in lesFactures %}
            <tr>
                <th scope="row" class="text-center">{{ facture.devis.dateDevis | date('mY') }}{{ facture.devis.id }}</th>
                <td >{{ facture.devis.dateDevis | date('d/m/Y') }}</td>
                <td class="text-center"> {{ facture.devis.montantTtc | number_format(2, ',', ' ') }}€ </td>
                <td class="text-center">{{ facture.crd | number_format(2, ',',' ') }}€</td>
                <td class="text-center">
                    <a href="" class="btn btn-sm btn-success">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a href="{{ path('devis_edit',{'id':facture.devis.id}) }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a href="{{ path('devis_delete',{'id':facture.devis.id}) }}"
                       class="btn btn-sm btn-danger"
                       onclick="return(confirm('Attention ! La suppression du devis ' +
                        'entrainera la suppression de la suppression de la facture correspondante '))">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
